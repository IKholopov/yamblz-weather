<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.toor.yamblzweather.presentation.mvp.view.fragment.NoPlacesFragment">

    <TextView
        android:text="@string/no_places_yet"
        android:textSize="@dimen/info_app_name_text_size"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bNavigateToAddPlaces"
        android:text="@string/add_places"
        android:textSize="@dimen/info_app_name_text_size"
        android:background="@color/color_forecast_background"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
